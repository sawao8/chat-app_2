<div class="chat-room">
  <div class="name_time">
    <div class="name">
      <%= message.user.name %>
    </div>
    <div class="time">
      <%= l message.created_at %>
    </div>
  </div>
  <div class="content-content">
    <div class="content">
      <%= message.content %>
    </div>
    <%= image_tag message.image.variant(resize: '500x500'), class: 'message-image-image' if message.image.attached? %>
  </div>
</div>