<div class="chat-header">
  <div class="header-left">
    <div class="header-title">
      hogehuga
    </div>  
  </div>
  <div class="header-right">
    <div class="chat-finish">
      <a href="#">チャットを終了する</a>
    </div>
  </div>      
</div>

<div class="chat-room">
  <%= render partial: 'message', collection: @messages %>          
</div>

<%= form_with model: [@room, @message], class: 'chat-form', local: true do |f| %>
  <div class="form">
    <%= f.text_field :content, placeholder: 'type a message', class:'message-form' %>
    <label class="form-image">
      <span class="image-file">画像</span>
      <%= f.file_field :image, class: 'hidden' %>
    </label>  
  </div>  
  <%= f.submit '送信', class: 'send' %>
<% end %>